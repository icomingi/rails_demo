<tr id="route_record_<%= route_record.id %>">
	<td class="user_id"><%= route_record.lng_s %></td>
	<td class="user_id"><%= route_record.lng_d %></td>
	<td class="id"><%= route_record.id %></td>
	<td class="from"><%= route_record.from %></td>
	<td class="to"><%= route_record.to %></td>
	<td class="data"><%= route_record.data %></td>
	<td class="created"><%= time_ago_in_words(route_record.created_at) %> ago</td>
	<td id="toggle_<%= route_record.id %>" class="button">
		<% if current_user.following?(route_record) %>
		
		<%= render "/route_records/unfollow", :route_record_id => route_record.id %>

		<% else %>

		<%= render "/route_records/follow", :route_record_id => route_record.id %>

		<% end %>
	</td>
</tr>
